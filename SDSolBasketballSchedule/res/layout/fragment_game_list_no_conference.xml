<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/team_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/game_list_season_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/season_name_hint"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/game_list_division_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/division_name_hint"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/game_list_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="@string/team_name_hint"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textSize="18sp" />
    
    <ListView
        android:id="@+id/game_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
</LinearLayout>